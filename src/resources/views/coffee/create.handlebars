<div class="mt-4">
    <h3>Mua Caffee </h3>
    {{!-- FORM --}}
    <form method="POST" action="/coffee/store">
        <div class="form-group">
            <label for="ban">Name Customer</label>
            <input type="text" class="form-control" placeholder="VD:Tuan Kiet" name="Number">
        </div>
        <div class="form-group">
            <label for="exampleFormControlSelect1">Select coffee</label>
            <select class="form-control" id="exampleFormControlSelect1" name="Name">
                <option>Coffe Latte</option>
                <option>Capuchino</option>
                <option>Coffe Milk</option>
                <option>Coffe Traditional</option>
                <option>Coffe Black</option>
            </select>
        </div>

        <div class="form-group">
            <label for="exampleFormControlSelect1">Quantity</label>
            <select class="form-control" id="exampleFormControlSelect1" name="Quantity">
                <option>1</option>
                <option>2</option>
                <option>3</option>
                <option>4</option>
                <option>5</option>
                <option>6</option>
                <option>7</option>
                <option>8</option>
                <option>9</option>
                <option>10</option>

            </select>
        </div>

        <div class="form-group">
            <label for="image">Img</label>
            <input type="text" class="form-control" name="image">
        </div>

        <div class="form-group">
            <label for="exampleFormControlTextarea1">Note</label>
            <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="Note"></textarea>
        </div>
        <button>Add Coffee</button>
    </form>
</div>